<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202732"
    tools:context=".registrarTopes">

    <Spinner
        android:id="@+id/id_spn_registrar_tope_tipo"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:textColorHint="#558EA8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Spinner
        android:id="@+id/id_spn_registrar_tope_listero"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:textColorHint="#558EA8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_spn_registrar_tope_tipo" />

    <EditText
        android:id="@+id/id_et_registrar_tope_datepicker"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/str_et_fecha"
        android:importantForAutofill="no"
        android:inputType="date"
        android:textColor="#FDF9F9"
        android:textColorHint="#558EA8"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_spn_registrar_tope_listero" />

    <LinearLayout
        android:id="@+id/id_ll_registrar_tope_block1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_et_registrar_tope_datepicker">

        <EditText
            android:id="@+id/id_et_registrar_tope_fijo"
            android:layout_width="105dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="@string/str_et_fijo"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="5"
            android:textColor="#FDF9F9"
            android:textColorHint="#558EA8"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/id_et_registrar_tope_corr"
            android:layout_width="105dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="@string/str_et_corrido"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="5"
            android:textColor="#FDF9F9"
            android:textColorHint="#558EA8"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/id_et_registrar_tope_centena"
            android:layout_width="105dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="@string/str_et_centena"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="5"
            android:textColor="#FDF9F9"
            android:textColorHint="#558EA8"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_ll_registrar_tope_block3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/id_et_registrar_tope_datepicker"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/id_btn_registrar_tope"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/button_rounded"
            android:text="@string/str_btn_jugadasimple_fijocorrido_guardar"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:ignore="VisualLintButtonSize" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_ll_registrar_tope_block2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_et_registrar_tope_datepicker">

        <EditText
            android:id="@+id/id_et_registrar_tope_parlet"
            android:layout_width="105dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="@string/str_et_parlet"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="5"
            android:textColor="#FDF9F9"
            android:textColorHint="#558EA8"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>