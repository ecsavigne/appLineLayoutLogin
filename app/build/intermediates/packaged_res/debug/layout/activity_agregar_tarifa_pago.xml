<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".agregarTarifaPago"
    android:background="#202732">

    <Spinner
        android:id="@+id/idSpinner_Registrar_TarifaPago_Persona"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="146dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/idEditTxt_Registrar_TarifaPago_ValorLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idSpinner_Registrar_TarifaPago_TipoJugada"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="18dp"
        android:autofillHints=""
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:hint="@string/strEdiTxt_TarifaPago_ValorPagarLista"
        android:inputType="number"
        android:maxLength="2"
        android:minHeight="48dp"
        android:textColor="@color/colorEditJugadas"
        android:textColorHint="#78909C"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/idEditTxt_Registrar_TarifaPago_Bote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idEditTxt_Registrar_TarifaPago_ValorLista"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:autofillHints=""
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:hint="@string/strEdiTxt_TarifaPago_ValorPagarBote"
        android:inputType="number"
        android:maxLength="2"
        android:minHeight="48dp"
        android:textColor="@color/colorEditJugadas"
        android:textColorHint="#78909C"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/idImgBtn_SuBMenu_Menu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@+id/idSpinner_Registrar_TarifaPago_TipoJugada"
        android:contentDescription="@string/strImgBtn_AddTipoJugada"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:textColor="#DFDADA"
        android:background="@drawable/button_rounded"

        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/idImgBtn_SuBMenu_Menu"
        android:layout_marginEnd="199dp"
        android:background="?android:attr/listDivider" />

    <EditText
        android:id="@+id/idEditTxt_Registrar_TarifaPago_Fecha"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/idImgBtn_SuBMenu_Menu"
        android:autofillHints=""
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:hint="@string/strEdiTxt_TarifaPago_Fecha"
        android:inputType="date"
        android:textColor="@color/colorEditJugadas"
        android:textColorHint="#78909C"
        android:textSize="24sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/idBtn_SubMenu_Registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idEditTxt_Registrar_TarifaPago_ValorLista"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_rounded"
        android:drawableStart="@android:drawable/ic_menu_save"
        android:text="@string/strBtn_TarifaPago_Registrar"
        android:textColor="#000000" />

    <Spinner
        android:id="@+id/idSpinner_Registrar_TarifaPago_TipoJugada"
        android:layout_width="142dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="80dp"
        tools:ignore="SpeakableTextPresentCheck" />
</RelativeLayout>