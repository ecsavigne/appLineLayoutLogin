<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    android:background="#202732"
    tools:context=".crearMenu">

    <EditText
        android:id="@+id/idETxt_NombreMenu"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="163dp"
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:hint="@string/strEdiTxt_CrearMenu"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/colorEditJugadas"
        android:textColorHint="#78909C"
        android:textSize="24sp" />

    <Button
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idETxt_NombreMenu"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/button_rounded"
        android:drawableStart="@android:drawable/ic_menu_save"
        android:text="@string/strBtn_CrearMenu"
        android:textColor="#DFDADA" />
</RelativeLayout>