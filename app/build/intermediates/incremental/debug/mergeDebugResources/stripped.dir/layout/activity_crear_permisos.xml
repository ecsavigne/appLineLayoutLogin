<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="#202732"
    tools:context=".crearPermisos">

    <EditText
        android:id="@+id/idETxt_NombrePermiso"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="161dp"
        android:autofillHints=""
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:hint="@string/strEdiTxt_CrearPermiso"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/colorEditJugadas"
        android:textColorHint="#78909C"
        android:textSize="24sp" />

    <Button
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idETxt_NombrePermiso"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:drawableStart="@android:drawable/ic_menu_save"
        android:text="@string/strBtn_CrearPermiso"
        android:textColor="#DFDADA" />

</RelativeLayout>