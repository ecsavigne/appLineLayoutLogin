<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrartiro"
    android:background="#202732">

    <EditText
        android:id="@+id/id_etxt_registrartiro_fecha"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="80dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/strEditText_RegistroTiro_Fecha"
        android:inputType="date"
        android:minHeight="48dp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="74dp"
        android:textColor="@color/colorEditJugadas"
        android:textColorHint="#78909C"
        android:textSize="24sp"
        android:backgroundTint="@color/colorAccent"/>

    <EditText
        android:id="@+id/id_etxt_registrartiro_hora"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@+id/id_etxt_registrartiro_fecha"
        android:autofillHints=""
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:hint="@string/strEditText_RegistroTiro_Hora"
        android:inputType="time"
        android:minHeight="48dp"
        android:textColor="@color/colorEditJugadas"
        android:textColorHint="#78909C"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="138dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_etxt_registrartiro_fecha"
        android:layout_marginTop="33dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/id_etxt_registrartiro_cent"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:backgroundTint="@color/colorAccent"
            android:ems="10"
            android:hint="@string/strEdiTxt_RegistroTiro_Centena"
            android:inputType="number"
            android:maxLength="3"
            android:minHeight="48dp"
            android:textColor="@color/colorEditJugadas"
            android:textColorHint="#78909C"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/id_etxt_registrartiro_fijo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:backgroundTint="@color/colorAccent"
            android:ems="10"
            android:hint="@string/strEdiTxt_RegistroTiro_Fijo"
            android:inputType="number"
            android:maxLength="2"
            android:minHeight="48dp"
            android:textColor="@color/colorEditJugadas"
            android:textColorHint="#78909C"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/id_etxt_registrartiro_corr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:backgroundTint="@color/colorAccent"
            android:ems="10"
            android:hint="@string/strEdiTxt_RegistroTiro_Corrido"
            android:inputType="number"
            android:maxLength="2"
            android:minHeight="48dp"
            android:textColor="@color/colorEditJugadas"
            android:textColorHint="#78909C"
            android:textSize="24sp"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <EditText
            android:id="@+id/id_etxt_registrartiro_corr2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:backgroundTint="@color/colorAccent"
            android:ems="10"
            android:hint="@string/strEdiTxt_RegistroTiro_Corrido"
            android:inputType="number"
            android:maxLength="2"
            android:minHeight="48dp"
            android:textColor="@color/colorEditJugadas"
            android:textColorHint="#78909C"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="245dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_btn_registrartiro_guardar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_rounded"
            android:drawableStart="@android:drawable/ic_menu_save"
            android:text="@string/strBtn_RegistroTiro_Registrar"
            android:textColor="#000000" />
    </LinearLayout>

</RelativeLayout>