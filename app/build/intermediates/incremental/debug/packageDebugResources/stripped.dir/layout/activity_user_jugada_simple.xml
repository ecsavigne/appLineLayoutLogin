<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202732"
    tools:context=".user_jugada_simple_Activity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="259dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="32dp"
            android:text="@string/str_tv_jugadasimple_h1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:text="@string/str_tv_jugadasimple_h2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="192dp"
        android:layout_height="432dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="32dp"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:splitMotionEvents="false">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:text="@string/str_tv_jugadasimple_num"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:text="@string/str_tv_jugadasimple_fijo"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_tv_jugadasimple_corr"
                android:textAlignment="center"
                android:textColor="@color/white" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/id_tv_jugadasimple_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/edit_mostrar_rounded"
                android:elegantTextHeight="true"
                android:gravity="center_vertical"
                android:maxLength="2"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_tv_jugadasimple_fijo"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/edit_mostrar_rounded"
                android:elegantTextHeight="true"
                android:gravity="center_vertical"
                android:maxLength="4"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_tv_jugadasimple_corrido"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_mostrar_rounded"
                android:elegantTextHeight="true"
                android:gravity="center_vertical"
                android:maxLength="4"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/id_btn_jugadasimple_7"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="75sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_raunded"
                android:text="@string/str_btn_jugadasimple_7"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="TouchTargetSizeCheck" />


            <Button
                android:id="@+id/id_btn_jugadasimple_8"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="75sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_raunded"
                android:text="@string/str_btn_jugadasimple_8"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="TouchTargetSizeCheck" />


            <Button
                android:id="@+id/id_btn_jugadasimple_9"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="75sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text_raunded"
                android:text="@string/str_btn_jugadasimple_9"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="TouchTargetSizeCheck" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/id_btn_jugadasimple_4"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_raunded"
                android:text="@string/str_btn_jugadasimple_4"
                android:textColor="@color/white"
                android:textSize="24sp" />


            <Button
                android:id="@+id/id_btn_jugadasimple_5"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_raunded"
                android:text="@string/str_btn_jugadasimple_5"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/id_btn_jugadasimple_6"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text_raunded"
                android:text="@string/str_btn_jugadasimple_6"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/id_btn_jugadasimple_1"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_raunded"
                android:text="@string/str_btn_jugadasimple_1"
                android:textColor="@color/white"
                android:textSize="24sp" />


            <Button
                android:id="@+id/id_btn_jugadasimple_2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_raunded"
                android:text="@string/str_btn_jugadasimple_2"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/id_btn_jugadasimple_3"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text_raunded"
                android:text="@string/str_btn_jugadasimple_3"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">


            <Button
                android:id="@+id/id_btn_jugadasimple_pto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_raunded"
                android:text="@string/str_btn_jugadasimple_pto"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/id_btn_jugadasimple_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2.5dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_raunded"
                android:text="@string/str_btn_jugadasimple_0"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/id_btn_jugadasimple_borrar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text_raunded"
                android:contentDescription="@string/str_btn_jugadasimple_atras"
                app:srcCompat="@android:drawable/ic_input_delete"
                tools:ignore="SpeakableTextPresentCheck" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/id_btn_jugadasimple_guardar"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_span="3"
                android:layout_weight="1"
                android:background="@drawable/button_rounded"
                android:drawableStart="@android:drawable/ic_menu_save"
                android:text="@string/str_btn_guardar"
                android:textColor="#DFDADA"
                android:textSize="17sp"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />

        </TableRow>


    </TableLayout>


</android.support.constraint.ConstraintLayout>